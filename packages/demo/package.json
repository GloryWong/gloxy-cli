{
  "name": "@gloxy/demo-cli",
  "version": "0.1.7",
  "description": "Create and manage local demos in one place instantly and smoothly.",
  "keywords": [
    "demo",
    "play",
    "instant",
    "playground"
  ],
  "author": "Glory Wong Zhaohui <glorywong1001@gmail.com>",
  "homepage": "https://github.com/GloryWong/gloxy-cli/tree/master/packages/demo#readme",
  "license": "ISC",
  "main": "lib/index.js",
  "bin": {
    "gdemo": "bin/demo.js"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "bin",
    "lib",
    ".env"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GloryWong/gloxy-cli.git"
  },
  "scripts": {
    "dev": "npm run clean && npm run copy && tsc --sourceMap true --watch",
    "build": "npm run clean && tsc && npm run copy",
    "copy": "recursive-copy --dot true --overwrite true src/template ./lib/template",
    "clean": "rimraf lib/",
    "test": "exit 0",
    "link-test": "node ./scripts/link-test.js",
    "unlink-test": "node ./scripts/link-test.js --not",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@gloxy/unilog": "^1.0.0",
    "boxen": "^5.0.1",
    "cfonts": "^2.9.3",
    "cli-columns": "^3.1.2",
    "commander": "^7.2.0",
    "conf": "^10.0.1",
    "dotenv-flow": "^3.2.0",
    "execa": "^5.1.1",
    "fuse.js": "^6.4.6",
    "inquirer": "^8.1.0",
    "listr": "^0.14.3",
    "lodash": "^4.17.21",
    "luxon": "^1.27.0",
    "mkdirp": "^0.5.5",
    "node-localstorage": "^2.2.1",
    "ora": "^5.4.0",
    "recursive-copy": "^2.0.13",
    "uid": "^2.0.0"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/gloxy-cli/issues"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "global-dirs": "^3.0.0",
    "symlink-dir": "^5.0.1"
  }
}
